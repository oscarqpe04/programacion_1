@{
    ViewData["Title"] = "Home Page";
}

<h1>@ViewData["titulo"]</h1>
<p>Total Estudiantes: @ViewData["total"]</p>
<table class="table table-striped tabled-bordered">
    <tr>
        <th>#</th>
        <th>Nombres</th>
        <th>Apellidos</th>
        <th>Edad</th>
    </tr>
    @for(var i = 0; i < (ViewData["estudiantes"] as List<Estudiante>).Count; i++)
    {
        <tr>
            <td>@(i + 1)</td>
            <td>@(  (ViewData["estudiantes"] as List<Estudiante>)[i].nombre     )</td>
            <td>@((ViewData["estudiantes"] as List<Estudiante>)[i].apellido)</td>
            <td>@((ViewData["estudiantes"] as List<Estudiante>)[i].edad)</td>
        </tr>
    }
</table>

@{
    var a = 456;
    var b = 10;

    try
    {
        <p>Intentar división</p>
        <p>@(a/b)</p>
    }
    catch (Exception ex)
    {
        <p>@ex.Message</p>
    }
    finally
    {
        <p>Siempre se ejecuta.</p>
    }
}

